{
  "name": "piadina",
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of small, flavorful utilities for modern TypeScript projects. Each package is independent, like ingredients â€” mix only what you need.",
  "scripts": {
    "<-- BUILD/START PACKAGES -->": "''",
    "build": "npm run build --workspaces --if-present",
    "<-- LINT -->": "''",
    "tsc": "npm run tsc --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "<-- TESTS  -->": "''",
    "test": "npm run test --workspaces --if-present",
    "posttest": "npm run docs",
    "<--  PUBLISH TO ARTIFACTORY -->": "''",
    "publish-package": "npm run publish-package --workspaces --if-present",
    "<-- UTILITIES TO CLEAN THE LOCAL REPO -->": "''",
    "clean:folders": "del-cli '**/packages/**/{dist,test,docs}'",
    "clean:cache": " del-cli '**/{.wireit,*.tsbuildinfo,test-report.xml}'",
    "clean:node_modules": "del-cli '**/{node_modules,package-lock.json}'",
    "clean": "npm run clean:folders && npm run clean:cache && npm run clean:node_modules",
    "<-- BUMP THE VERSION -->": "''",
    "versions:bump": "changeset",
    "versions:apply": "changeset version",
    "postversions:apply": "npm i",
    "<-- MANUAL SCRIPT TO UPDATE ALL DEPENDENCIES -->": "''",
    "update-deps": "npx npm-check-updates -u --interactive",
    "update-deps:all": "npm run update-deps --workspaces --if-present --  --interactive",
    "<-- MANUAL SCRIPT TO UPDATE ALL PACKAGE.JSON -->": "''",
    "update-pkg": "node ./scripts/update-package-json.mjs",
    "docs": "typedoc --suppressCommentWarningsInDeclarationFiles",
    "predocs": "cd typedoc-plugins && npm run build"
  },
  "author": "marcog83",
   "repository": {
      "type": "git",
      "url": "https://github.com/marcog83/piadina.git"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 24",
    "npm": ">= 11"
  },
  "workspaces": [
    "packages/scheme-up",
    "typedoc-plugins"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/preset-env": "7.27.2",
    "@babel/preset-react": "7.27.1",
    "@changesets/cli": "2.29.5",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "1.3.8",
    "@testing-library/jest-dom":"6.8.0",
    "@eslint-react/eslint-plugin":"1.53.0",
    "eslint-plugin-react-hooks":"5.2.0",
    "eslint-plugin-react":"7.37.5",
    "del-cli": "6.0.0",
    "dotenv": "16.5.0",
    "eslint": "9.34.0",
    "glob": "11.0.3",
    "happy-dom": "18.0.1",
    "msw": "2.10.2",
    "typedoc": "0.28.12",
    "typedoc-plugin-missing-exports": "4.1.0",
    "typescript": "5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-circular-dependency": "0.5.0",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4",
    "wireit": "0.14.12",
    "zod":"4.0.15",
    "@total-typescript/tsconfig":"1.0.4",
    "typescript-eslint":"8.42.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  }
}